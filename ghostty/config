# -- Theme --
theme = "catppuccin-mocha"

# -- Fonts --
font-family = "JetBrains Mono"
font-size = 13

# -- Cursor Settings --
cursor-style = block
cursor-style-blink = true
cursor-click-to-move = true
mouse-hide-while-typing = true

# -- Visual --
background-opacity = 0.8
background-blur-radius = 20

# -- Misc --
link-url = true
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true
quit-after-last-window-closed = true
macos-option-as-alt = left
quick-terminal-position = center
shell-integration = zsh
confirm-close-surface = false
macos-titlebar-style = tabs
gtk-titlebar = false

# -- Keybinds --
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+a=select_all
keybind = super+r=reload_config
keybind = super+shift+t=toggle_quick_terminal

keybind = ctrl+space>w=close_surface

# -- Tabs --
keybind = ctrl+space>c=new_tab
keybind = ctrl+space>n=next_tab
keybind = ctrl+space>p=previous_tab

# -- Splits --
keybind = ctrl+space>h=new_split:down
keybind = ctrl+space>v=new_split:right
keybind = ctrl+n>h=goto_split:left
keybind = ctrl+n>l=goto_split:right
keybind = ctrl+n>j=goto_split:bottom
keybind = ctrl+n>k=goto_split:top


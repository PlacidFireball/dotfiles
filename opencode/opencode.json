{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "model": "litellm/gemini-3-flash",
  "disabled_providers": [
    "opencode"
  ],
  "logLevel": "DEBUG",
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Quiq LiteLLM Proxy",
      "options": {
        "baseURL": "https://quiqgpt-proxy-east.quiq.sh/v1",
      },
      "models": {
        "gemini-3-flash": {
          "name": "Gemini 3 Flash"
        },
        "claude-4.6-sonnet": {
          "name": "Claude 4.6 Sonnet"
        }
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "rm *": "ask",
      "git *": "ask",
      "grep *": "allow",
    },
    "edit": {
      "*": "ask",
    },
    "read": {
      "*": "ask",
      "*.env": "deny",
      "*.env.*": "deny",
    },
    "list": {
      "*": "allow"
    },
    "task": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "ask",
    "websearch": "ask",
    "codesearch": "ask",
    "external_directory": "ask",
    "doom_loop": "deny"
  }
}
